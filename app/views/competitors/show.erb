<h3>Name: <%= @comp.name %></h3>
<h4>Sport: <%= @comp.sport_name %></h4>
<h6>Bovada ID: <%= @comp.bovada_id %></h6>
<br><br>
<h4>Upcoming Events</h4>

<table>
    <tr>
        <th width = 225>Subset / League / Type</th>
        <th width = 250>Description</th>
        <th width = 125>Starts In</th>
        <th width = 100>Wagers Listed</th>
        <th>Bets Last Updated</th>
    </tr>
    <% @comp.events.each do |e| %>
        <tr>
            <td><%= e.sport.sub_name %></td>
            <td><%= link_to e.description, e %></td>
            <td><%= e.time_until_start %></td>
            <td><%= e.markets.count %></td>
            <td><%= e.time_since_updated %></td>
        </tr>
    <% end %>
</table>