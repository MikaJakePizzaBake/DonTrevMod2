<h3>My Favorite Teams/Players:</h3>
<% unless @user.my("Comp").empty? %>

    <div>
    <% @user.my("Comp").each do |e| %>
        <%= link_to "Delete!", remove_track_path(kind: "Comp", model_id: e.id), method: "POST" %>
        <%= link_to e.name, e %><br />

    <% end %>

<% else %>
    <h6>Not Tracking Any Competitors</h6>
<% end %>
<%= link_to "Track Players and Teams", choose_competitors_path %>
</div>

<h3>My Events:</h3>
<% unless @user.my("Event").empty? %>

    <div>
    <% @user.my("Event").each do |e| %>

        <%= link_to e.display, e %><br />

    <% end %>

<% else %>
    <h6>Not Tracking Any Events</h6>
<% end %>
<%= link_to "Track Events by Sport", choose_events_path %>
</div>

<h3>My Sports:</h3>
<% unless @user.my("Sport").empty? %>

    <div>
    <% @user.my("Sport").each do |e| %>

        <%= link_to e.sport_name, e %><br />

    <% end %>

<% else %>
    <h6>Not Tracking Any Sports</h6>
<% end %>
<%= link_to "Follow a New Sport, 'account#add'" %>
</div>

<h3>Wagers I'm Following:</h3>
<% unless @user.my("Market").empty? %>

    <div>
    <% @user.my("Market").each do |e| %>

        <%= link_to e.description, "www.google.com" %><br />

    <% end %>

<% else %>
    <h6>Not Tracking Any Wagers</h6>
<% end %>
<%= link_to "Track A Wager, 'account#add'" %>
</div>